	<script type="text/javascript">
    $(document).ready(function(){
        "use strict";

		$('.btn-successthing').click(function(){
        	swal("Bucket added", "", "success");
        });
		
		$('.btn-successtype').click(function(){
        	swal("Type added", "", "success");
        });
		 });
    </script>

</body>

</html>
